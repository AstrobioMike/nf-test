nextflow_pipeline {

  name "Test test1.nf"

  script "test-data/test1.nf" //main.nf is default
  profile "docker"


  test("Should create 5 output files") {

   when {
     params.lukas = 27
     params.forer = "22"
     params.outdir = "output"
   }

   then {
     assert workflow.success
     assert params.lukas == 27
     for (def i in 1..5){
       def file = new File("${params.outdir}/${i}_27.txt");
       assert file.exists()
       assert file.text == "lukas forer\n"
     }
   }

  }


  test("Should fail if outdir is missing") {

    //debug true

    when {
      params.lukas = 27
      params.forer = "22"
    }

    then {
      assert workflow.failed
      assert params.lukas == 27
      assert params.forer == "22"
    }

  }

}

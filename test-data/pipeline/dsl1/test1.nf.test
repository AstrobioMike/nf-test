nextflow_pipeline {

  name "Test test1.nf"

  script "test-data/pipeline/dsl1/test1.nf"

  test("Should create 5 output files") {

   when {
     params.lukas = 27
     params.forer = "22"
     params.outdir = "output"
   }

   then {
     assert workflow.success
     assert params.lukas == 27
     for (def i in 1..5){
       def file = new File("${params.outdir}/${i}_27.txt");
       assert file.exists()
       assert file.text == "lukas forer\n"
     }
     assert snapshot([
     	"${params.outdir}/1_27.txt",
     	"${params.outdir}/2_27.txt",
     	"${params.outdir}/3_27.txt",
     	"${params.outdir}/4_27.txt",
     	"${params.outdir}/5_27.txt",
     ]
     ).match("process_test_1")
   }

  }


  test("Should fail if outdir is missing") {

    //debug true

    when {
      params.lukas = 27
      params.forer = "22"
    }

    then {
      assert workflow.failed
      assert params.lukas == 27
      assert params.forer == "22"
    }

  }

}
